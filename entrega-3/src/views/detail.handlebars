<div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <img src="{{product.thumbnails}}" class="w-fit h-40 object-cover rounded-md inset-0 m-auto">
        </div>
        <div>
            <h1 class="text-3xl font-bold text-gray-800">{{product.title}}</h1>
            <p class="text-gray-600 mt-2">{{product.description}}</p>
            <p class="text-2xl font-semibold text-green-500 mt-4">${{product.price}}</p>
            <div class="flex items-center space-x-2  mt-2">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" onclick="decreaseQuantity()">
                    -
                </button>
                <input type="number" id="quantity-input" value="1" min="1" class="w-16 text-center border border-gray-300 rounded-md py-2">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" onclick="increaseQuantity({{product.stock}})">
                    +
                </button>
            </div>
            <button class="mt-6 px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600" onclick="addProductToCart('{{product._id}}')"">
                AÃ±adir al carrito
            </button>
        </div>
    </div>
</div>
<input type="hidden" id="port" value="{{port}}">